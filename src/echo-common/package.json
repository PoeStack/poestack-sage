{
  "name": "echo-common",
  "version": "1.0.3",
  "type": "commonjs",
  "main": "./dist/esm/index.js",
  "module": "./dist/cjs/index.js",
  "files": [
    "dist/",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "development": {
        "import": "./src/index.ts",
        "require": "./src/index.ts"
      },
      "default": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js",
        "types": "./dist/cjs/index.d.ts"
      }
    },
    "./components-v1": {
      "development": {
        "import": "./src/ui/components/v1/index.ts",
        "require": "./src/ui/components/v1/index.ts",
        "types": "./dist/ui/components/v1/index.d.ts"
      },
      "default": {
        "import": "./dist/esm/ui/components/v1/index.js",
        "require": "./dist/cjs/ui/components/v1/index.js",
        "types": "./dist/ui/components/v1/index.d.ts"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig-esm.json && tsc -p tsconfig.json",
    "test": "npm run build && node dist/cjs/poe-api-test.js",
    "prepublishOnly": "npm run build",
    "format": "prettier --write ./src",
    "lint": "eslint ./src --fix --resolve-plugins-relative-to ../sage-ts-tooling",
    "jest-test": "npm run build && jest --detectOpenHandles ./test/*"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-rxjs/core": "^0.10.7",
    "@react-rxjs/utils": "^0.9.7",
    "@types/mock-fs": "^4.13.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "ggg-api": "file:../ggg-api",
    "lucide-react": "^0.292.0",
    "object-hash": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.1",
    "sage-common": "file:../sage-common",
    "tail": "^2.2.6",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-ratchet": "file:../ts-ratchet"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/tail": "^2.2.3",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
